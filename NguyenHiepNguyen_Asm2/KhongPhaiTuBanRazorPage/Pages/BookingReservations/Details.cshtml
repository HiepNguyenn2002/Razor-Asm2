@page
@model KhongPhaiTuBanRazorPage.Pages.BookingReservations.DetailsModel

@{
    ViewData["Title"] = "Booking Details";
    if (HttpContext.Session.GetString("role") != null && HttpContext.Session.GetString("role") == "customer")
    {
        ViewData["HeaderName"] = "_CustomerLayout";
    }
    else if (HttpContext.Session.GetString("role") != null && HttpContext.Session.GetString("role") == "admin")
    {
        ViewData["HeaderName"] = "_AdminLayout";
    }
    else
    {
        ViewData["HeaderName"] = "_NotAuthLayout";
    }
}

<h1>Details</h1>

<div>
    <h4>BookingReservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.TotalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.TotalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.BookingStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.BookingStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingReservation.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingReservation.Customer.CustomerFullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="/BookingDetails/Index" asp-route-BookingReservationId="@Model.BookingReservation.BookingReservationId">BookingDetails</a>
    @if (HttpContext.Session.GetString("role") != null)
    {
        if (HttpContext.Session.GetString("role") == "customer")
        {
            <a asp-page="./Index">Back to List</a>
        }
        else
        {
            <a asp-page="./Edit" asp-route-id="@Model.BookingReservation?.BookingReservationId">Edit</a>
            <a asp-page="./Index">Back to List</a>
        }
    }
    
</div>
