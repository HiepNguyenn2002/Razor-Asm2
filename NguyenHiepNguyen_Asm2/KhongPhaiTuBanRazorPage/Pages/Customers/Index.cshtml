@page
@model KhongPhaiTuBanRazorPage.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Customer Index";
    if (HttpContext.Session.GetString("role") != null && HttpContext.Session.GetString("role") == "customer")
    {
        ViewData["HeaderName"] = "_CustomerLayout";
    }
    else if (HttpContext.Session.GetString("role") != null && HttpContext.Session.GetString("role") == "admin")
    {
        ViewData["HeaderName"] = "_AdminLayout";
    }
    else
    {
        ViewData["HeaderName"] = "_NotAuthLayout";
    }
}

<h1>Customer Index</h1>
@if (ViewData["ErrorMessage"] != null)
{
    <p>@ViewData["ErrorMessage"]</p>
}
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerBirthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Customer != null)
        {
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerFullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerBirthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CustomerId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CustomerId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CustomerId">Delete</a>
                    </td>
                </tr>
        }
        
}
    </tbody>
</table>
