@page
@model KhongPhaiTuBanRazorPage.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Customer Details";
    if (HttpContext.Session.GetString("role") != null && HttpContext.Session.GetString("role") == "customer")
    {
        ViewData["HeaderName"] = "_CustomerLayout";
    }
    else if (HttpContext.Session.GetString("role") != null && HttpContext.Session.GetString("role") == "admin")
    {
        ViewData["HeaderName"] = "_AdminLayout";
    }
    else
    {
        ViewData["HeaderName"] = "_NotAuthLayout";
    }
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerFullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Telephone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Telephone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerBirthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerBirthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.CustomerStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.CustomerStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Password)
        </dd>
    </dl>
</div>
<div>
    @if (HttpContext.Session.GetString("role") != null)
    {
        if (HttpContext.Session.GetString("role") == "customer")
        {
            <a asp-page="/Index">Back to HomePage</a>
        }
        else
        {
            <a asp-page="./Edit" asp-route-id="@Model.Customer?.CustomerId">Edit</a>
            <a asp-page="./Index">Back to List</a>
        }
    }

</div>
